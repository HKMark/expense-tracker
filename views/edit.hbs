<form action="/records/{{ record._id }}/edit" method="POST">
  <label for="name">名稱：</label>
  <input type="text" placeholder="例如：交通費" name="name" value="{{ record.name }}">
  <label for="date">日期：</label>
  <input type="date" name="date" value="{{ record.date }}">
  <label for="category">類別：</label>
  <select id="category" name="category">
    <option value="{{ record.categoryId }}">{{ categoryName }}</option>
    {{#each categoryList}}
    <option value="{{ this.id }}">{{ this.name }}</option>
    {{/each}}
  </select>
  <label for="amount">金額：</label>
  <input type="number" id="amount" name="amount" placeholder="輸入金額" step="0.01" value="{{ record.amount }}">
  <button type="submit">送出</button>
  <a href="/">返回</a>
</form>